<table class="table table-bordered table-striped">
	<!-- Header for the business contacts table -->
	<thead class="thead-dark">
		<tr class="d-flex">
			<th class="col-4">Name</th>
			<th class="col-3">Phone</th>
			<th class="col-3">E-mail</th>
			<th class="col-2"></th>
		</tr>
	</thead>
	<!-- for loop to display all the data for the business contacts table -->
	<% for (let i = 0; i < contacts.length; i++) { %>
		<tr class="d-flex">
			<td class="col-4"><%= contacts[i].name %></td>
			<td class="col-3"><%= contacts[i].phone %></td>
			<td class="col-3"><%= contacts[i].email %></td>
			<td class="col-2">
				<div class="row">
					<div class="col">
						<a class="btn btn-primary w-100" href="/business_contacts/edit/<%= contacts[i]._id %>">Edit</a>
					</div>
					<div class="col">
						<a class="btn btn-danger w-100" href="/business_contacts/delete/<%= contacts[i]._id %>">Delete</a>
					</div>
				</div>
			</td>
		</tr>
	<% } %>
</table>
