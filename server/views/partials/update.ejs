<form class="form" method="post">
	<div class="row">
		<div class="col-md-4 mb-3">
			<label for="name">Name</label><br>
			<input class="form-control w-100" type="text" name="name" value="<%= contact.name %>" id="name">
		</div>
		<div class="col-md-4 mb-3">
			<label for="phone">Phone</label><br>
			<input class="form-control w-100" type="tel" name="phone" value="<%= contact.phone %>" id="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
		</div>
		<div class="col-md-4 mb-3">
			<label for="email">E-mail</label><br>
			<input class="form-control w-100" type="email" name="email" value="<%= contact.email %>" id="email">
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-4 mb-3">
			<a class="btn btn-danger w-100" href="/business_contacts/delete/<%= contact._id %>" name="delete" id="delete"/>Delete</a>
		</div>
		<div class="col-md-4 mb-3">
			<input class="btn btn-primary w-100" type="submit" value="Submit" name="submit" id="submit"/>
		</div>
		<div class="col-md-4 mb-3">
			<a class="btn btn-secondary w-100" href="/business_contacts" name="cancel" id="cancel"/>Cancel</a>
		</div>
	</div>
</form>
